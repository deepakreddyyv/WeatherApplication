    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>


    <!-- Custom styles for this template -->
    <link href="css/styles.css" rel="stylesheet">
  </head>
  <body class="text-center">

<main class="form-signin">
  <form action="/" method="post">
  
    <h1 class="h3 mb-3 fw-normal header"> <%= Time %> </h1>
    <div class="card" style="width: 18rem;">
      <div class="card-body cardDesign">
        <div class="form-floating weatherDiv">
          <h6 class="location"><strong><%= City %>, <%= Country %></strong></h6>
          <p class="desc"><%= Desc %></p>
          <h3 class="temp">
            <img class="img" src=<%= Image %> alt="weather-img"> <%= Temp %>&deg; C
          </h3>
          <p class="humidity">Humidity :  <%= Humidity %>%</p>
          <p class="sunrise">sunrise : <%= Sunrise %></p>
          <p class="sunset">sunset : <%= Sunset %></p>

          <form class="" action="/" method="post">
             <button class="w-100 btn btn-md btn-warning button" name="button" type="submit" value="redirect">Back</button>
          </form>


        </div>
      </div>
    </div>



    <p class="mt-5 mb-3 text-muted copyRight">&copy; Deepak Reddy</p>

  </form>
</main>



  </body>
